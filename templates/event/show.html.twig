{% extends getRole(app.request) == "ROLE_ARTISTE" ? "base-front-artiste.html.twig" :  getRole(app.request) == "ROLE_PRESTATAIRE"  ? 'base-back-prest.html.twig' : 'base-back.html.twig' %}


{% block title %}Evenement{% endblock %}

{% block body %}
    <h1 class="text-primary" style="margin-left: 35%">Evenement</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="h5">Id</th>
                <td class="h4">{{ evenement.id }}</td>
            </tr>
            <tr>
                <th class="h5">NomEvent</th>
                <td class="h4">{{ evenement.NomEvent }}</td>
            </tr>
            <tr>
                <th class="h5">AdresseEvent</th>
                <td class="h4">{{ evenement.AdresseEvent }}</td>
            </tr>
            <tr>
                <th class="h5">CapaciteEvent</th>
                <td class="h4">{{ evenement.CapaciteEvent }}</td>
            </tr>
            <tr>
                <th class="h5">NbrTicketAchete</th>
                <td class="h4">{{ evenement.nbrTicketAchete }}</td>
            </tr>
            <tr>
                <th>DateDebutEvent</th>
                <td class="h4">{{ evenement.DateDebutEvent ? evenement.DateDebutEvent|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="h5">DateFinEvent</th>
                <td class="h4">{{ evenement.DateFinEvent ? evenement.DateFinEvent|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="h5">TypeEvent</th>
                <td class="h4">{{ evenement.TypeEvent }}</td>
            </tr>
            <tr>
                <th class="h5">CategorieEvent</th>
                <td class="h4">{{ evenement.CategorieEvent }}</td>
            </tr>
            <tr>
                <th class="h5">PrixEntre</th>
                <td class="h4">{{ evenement.PrixEntre }}</td>
            </tr>
            <tr>
                <th class="h5">Image Evènement</th>
                <td class="h4"><img class="img-fluid"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}"><button class="btn btn-info">En Arrière</button></a><br>

   <br> <a href="{{ path('app_event_edit', {'id': evenement.id}) }}"><button class="btn btn-info">Modifier</button></a><br>

    <br>{{ include('event/_delete_form.html.twig') }}
{% endblock %}
