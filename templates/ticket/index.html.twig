{% extends  "base-front-artiste.html.twig" %}

{% block title %}Tickets Index{% endblock %}

{% block body %}
    <h1 class="text-primary" style="margin-left: 35%">Ticket index</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="h5">Id</th>
                <th class="h5">PrixTicket</th>
                <th class="h5">NomEvent</th>
                <th class="h5">TypeTicket</th>
                <th class="h5">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td class="h5">{{ ticket.id }}</td>
                <td class="h5">{{ ticket.PrixTicket }}</td>
                <td class="h5">{{ ticket.NomEvent }}</td>
                <td class="h5">{{ ticket.TypeTicket }}</td>
                <td class="h5">
                    <a class="nav-link" href="{{ path('app_ticket_show', {'id': ticket.id}) }}">
                        <i class="fa fa-book fa-fw" aria-hidden="true"></i>
                        <span>Afficher</span></a>

                    <a class="nav-link" href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">
                        <i class="fa fa-cog fa-spin fa-1.75 fa-fw"></i>
                        <span class="sr-only">Loading...</span>

                        <span>Modifier</span></a>

                    <a class="nav-link" href="{{ path('app_ticket_delete', {'id': ticket.id}) }}">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                        <span>Supprimer</span></a>



                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ticket_new') }}"><button class="btn btn-info">Ajouter Un Nouveau Ticket</button></a>
{% endblock %}
