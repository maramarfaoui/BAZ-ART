{% extends getRole(app.request) == "ROLE_ARTISTE" ? "base-back-artiste.html.twig" :  getRole(app.request) == "ROLE_PRESTATAIRE"  ? 'base-back-prest.html.twig' : 'base-back.html.twig' %}



{% block title %}plus reclamé{% endblock %}

{% block stylesheet %}
    <!-- Custom fonts for this template-->
    <link href="{{ asset('client/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
    <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="{{ asset('client/css/sb-admin-2.min.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}
<div class="table-wrapper">
    <table class="reclam-back">
        <thead>
        <tr>
            <th style="text-align: center">probleme</th>
            <th style="text-align: center">nombre reclamations</th>
        </tr>
        </thead>
        <tbody>
        {% for probleme in problemes %}
        <tr>
            <td style="text-align: center">{{ probleme['name'] }}</td>
            <td style="text-align: center">{{ probleme['num'] }}</td>


        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<br><br><br><br><br>
    {% set max = [] %}
    {% for probleme in problemes %}
        {% set max=probleme %}
    {% endfor %}

    {% for probleme in problemes %}
        {% if probleme['num'] > max['num'] %}
            {%  set max = probleme %}
        {% endif %}
    {% endfor %}
    <h1>Probleme plus réclamé</h1>
    <h2 style="color: #ff2827">{{ max['name'] }}</h2>
{%  endblock %}
