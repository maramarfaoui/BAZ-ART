
{#{% extends 'front-seif.html.twig' %}#}
{% extends "base-front-artiste.html.twig"  %}

{% block title %}Détails Salle{% endblock %}

{% block body %}







    <div class="title-all text-center">
        <h1>Détails Salle</h1>
    </div>







    <div class="row">
        <div class="col-xl-5 col-lg-5 col-md-6">
            <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active"><img class="d-block w-100"
                                                           src={{ asset('uploads/personnes/' ~ salle.image) }}>
                    </div>
                    <div class="carousel-item"><img class="d-block w-100"
                                                    src={{ asset('uploads/personnes/' ~ salle.image) }}></div>
                    <div class="carousel-item"><img class="d-block w-100"
                                                    src={{ asset('uploads/personnes/' ~ salle.image) }}></div>
                </div>
                <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                        <img class="d-block w-100 img-fluid"
                             src={{ asset('uploads/personnes/' ~ salle.image) }} alt="">
                    </li>
                    <li data-target="#carousel-example-1" data-slide-to="1" class="">
                        <img class="d-block w-100 img-fluid"
                             src={{ asset('uploads/personnes/' ~ salle.image) }} alt="">
                    </li>
                    <li data-target="#carousel-example-1" data-slide-to="2" class="">
                        <img class="d-block w-100 img-fluid"
                             src={{ asset('uploads/personnes/' ~ salle.image) }} alt="">
                    </li>
                </ol>
            </div>
        </div>
        <div class="col-xl-7 col-lg-7 col-md-6">
            <div class="single-product-details">
                <h4>Nom Salle:</h4>
                <h5>{{ salle.nom }}</h5>
                <h4>Type De Salle:</h4>
                <h5> {{ salle.type }}</h5>


                <h4>Statut De La Salle:</h4>
                <h5>{{ salle.statu }}</h5>

                <h4>Prix De La Salle:</h4>
                <h5>{{ salle.prix }}</h5>
                <h4>Capacité De La Salle:</h4>
                <h5>{{ salle.capacite }}</h5>
                <div class="price-box-bar">
                    <div class="cart-and-bay-btn">

{#                        <a class="btn hvr-hover" data-fancybox-close="" href="#">Réserver Salle</a>#}


                        <a class="btn hvr-hover" data-fancybox-close="" href="{{ path('app_salle_front_stripe',{'id':salle.id}) }}">Réserver Salle</a>

                    </div>


                    <div class="cart-and-bay-btn">
                        <br><br><br><br><br>

                        <a  href="/ev/front" class="btn hvr-hover" data-fancybox-close=""
                        >Retour A Acceuil</a>

                    </div>
                </div>



            </div>
        </div>
    </div>


{% endblock %}

