{% extends getRole(app.request) == "ROLE_ARTISTE" ? "base-front-artiste.html.twig" :  getRole(app.request) == "ROLE_PRESTATAIRE"  ? 'base-back-prest.html.twig' : 'base-back.html.twig' %}

{% block title %}Calendrier Des Evènements{% endblock %}

{% block body %}
    <h1>EventCalendar</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="h5">Id</th>
                <td class="h4">{{ event_calendar.id }}</td>
            </tr>
            <tr>
                <th class="h5">Title</th>
                <td class="h4">{{ event_calendar.title }}</td>
            </tr>
            <tr>
                <th class="h5">Start</th>
                <td class="h4">{{ event_calendar.start ? event_calendar.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="h5">End</th>
                <td class="h4">{{ event_calendar.end ? event_calendar.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="h5">Description</th>
                <td class="h4">{{ event_calendar.description }}</td>
            </tr>
            <tr>
                <th class="h5">Background_Color</th>
                <td class="h4">{{ event_calendar.backgroundColor }}</td>
            </tr>
            <tr>
                <th class="h5">Border_Color</th>
                <td class="h4">{{ event_calendar.borderColor }}</td>
            </tr>
            <tr>
                <th class="h5">Text_Color</th>
                <td class="h4">{{ event_calendar.TextColor }}</td>
            </tr>
            <tr>
                <th class="h5">All_day</th>
                <td class="h4">{{ event_calendar.JourneeEntiere ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_calendar_index') }}"><button class="btn btn-info">En Arrière</button></a><br>

   <br> <a href="{{ path('app_event_calendar_edit', {'id': event_calendar.id}) }}"><button class="btn btn-info">Modifier</button></a>

    {{ include('event_calendar/_delete_form.html.twig') }}
{% endblock %}
